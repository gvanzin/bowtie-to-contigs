if [ -n "$PBS_O_WORKDIR" ]; then
    cd $PBS_O_WORKDIR
fi

CONFIG="./config.sh"

if [ -e $CONFIG ]; then
    . "$CONFIG"
else
    echo MIssing config \"$CONFIG\"
    exit 12385
fi

COMMON="$WORKER_DIR/common.sh"

if [ -e $COMMON ]; then
  . "$COMMON"
else
  echo Missing common \"$COMMON\"
  exit 1
fi

#get rid of multiple headers
cd $CONTIG_DIR
find ./contig-out/ -iname \*.tab -print0 | xargs -0 -I file cat file > $CONTIGS_ANNOT
head -1 $CONTIGS_ANNOT > header.temp
egrep -v '^prot\s.+' $CONTIGS_ANNOT > temp.tab
cat header.temp temp.tab > temp2.tab
mv temp2.tab $CONTIGS_ANNOT
mv temp.tab annotation-backup.tab

#make prot numbers sequential (and smaller for reduced file size)
if [ -n "$PBS_O_WORKDIR" ]; then
    cd $PBS_O_WORKDIR
fi
module load R
Rscript ./FIX-ANNOTATION.R

